{%  extends "base.html.twig" %}

{%  block title "Gestion des médicaments" %}
{% block body %}


<div class="container mt-4">
    <h1>Gestion des médicament</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
    {% for element in medicaments %}
        <tr>
            <td>
                {{ element.name }}
            </td>
            <td>
                <a href="{{ path("admin.medicaments.edit", {id: element.id}) }}" class="btn btn-secondary">Editer</a>
            </td>
        </tr>
    {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        <a href="{{ path("admin.medicaments.new") }}" class="btn btn-secondary">Ajouter un médicament</a>
    </div>
</div>


{% endblock %}