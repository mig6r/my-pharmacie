{% extends "base.html.twig" %}

{% block title %}
    {{ medicament.name }}
{% endblock %}

{%  block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                {%  if medicament.picture %}
                    <img src="{{ vich_uploader_asset(medicament, 'imageFile') | imagine_filter('medium')}}" alt="card-img-top" style="width: 100%; height:auto;">
                {% else %}
                    <img src="{{ '/images/medicaments/empty.jpg' | imagine_filter('thumb')}}" alt="card-img-top" style="width: 100%; height:auto;">
                {% endif %}
            </div>
            <div class="col-md-6">
                <h1>{{ medicament.name }}</h1>
                <div class="text-primary">{{ medicament.description }}</div>
            </div>
        </div>
    </div>
{% endblock %}